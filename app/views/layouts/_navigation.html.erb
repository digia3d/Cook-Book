    <span class='alert'>
     <p class='text-2xl py-2 px-4 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-teal-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75'>Welcome <%= current_user.name%></p>
    </span>
  <% end %>
  </div>
