<h1>list of foods</h1>

<%= link_to "Add Food", '/foods/new' %>

<table class="table-auto">
  <thead>
    <tr>
      <th>Food</th>
      <th>Measurment unit</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td>  <%= button_to 'delete', "/foods/#{food.id}/", method: :delete%></td>
    </tr>
<% end%>
  </tbody>
</table>